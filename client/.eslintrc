{
  "extends": [ "airbnb" ],
  
  "parser": "babel-eslint",
  
  "plugins": [
    "flowtype"
  ],
  
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  
  "env": {
    "es6": true,
    "browser": true
  },
  
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
